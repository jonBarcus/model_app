<body class="text-center signin">


	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin form-control" }) do |f| %>
	<h1 class="h3 mb-3 font-weight-normal">Forgot your password?</h1>
	  <%= devise_error_messages! %>

	  <div class="form-signin input[type='email']">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
	  </div>

	  <div class="actions">
	    <%= f.submit "Send me reset instructions", class: "btn btn-lg btn-primary btn-block" %>
	  </div>

	  	<%= render "devise/shared/links" %>
	<% end %>

</body>